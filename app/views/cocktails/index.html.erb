<h1>カクテル検索</h1>
<div class="mb-3"></div>

<div class="nav justify-content-end">
    <a class="btn btn-primary" href="/cocktails/new">新規登録</a>
</div>

<table class="table table-hover">
    <thead class="thead-default">
        <tr>
            <th>カクテル名</th>
            <th>ベースのお酒</th>
            <th>味</th>
            <th>グラスタイプ</th>
            <th>度数</th>
        </tr>
    </thead>
    <tbody>
        <% @cocktails.each do |cocktail| %>
        <tr>
            <td><%= link_to cocktail.name , cocktail_path(cocktail.id) %></td>
            <td><%= cocktail.base_alcohol %></td>
            <td><%= cocktail.taste %></td>
            <td><%= cocktail.glass_type %></td>
            <td><%= cocktail.alcohol_percentage %></td>
        </tr>
        <% end %>
    </tbody>
</table>