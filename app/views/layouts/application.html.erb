<!DOCTYPE html>
<html>
  <head>
    <title>CocktailSearchApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="app-title navbar navbar-expand-md navbar-light bg-light">
      <div class="navber-brand">CocktailSearchApp</div>

      <ul class="navbar-nav ml-auto">
        <% if current_user %>
          <li><%= link_to("logout", logout_path, :method => :delete, class: "nav-link") %></li>
        <% else %>
          <li><%= link_to("login", login_path, class: "nav-link") %></li>
          <li><%= link_to("ユーザー登録", new_user_path, class: "nav-link") %></li>
        <% end %>
      </ul>
    </div>
  
    <div class="container">
      <% if flash[:notice]  %>
        <div class="alert alert-success">
          <%= flash[:notice]  %>
        </div>
      <% end %>
      <%= yield %>
  </body>
</html>
