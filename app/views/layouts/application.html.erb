<!DOCTYPE html>
<html>
  <head>
    <title>CocktailSearchApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <div class="app-title navbar navbar-expand-md navbar-light bg-light">
      <div class="navber-brand">CocktailSearchApp</div>
      <dl class="searchbox">
        <%= search_form_for @search, url: cocktails_path do |f| %>
          <dt><%= f.text_field :name_or_base_alcohol_cont ,placeholder: 'カクテル名を検索' %></dt>
          <dd><%= f.submit ("検索!") , class: 'search-btn'%></dd>
        <% end %>
      </dl>

      <ul class="navbar-nav ml-auto">
      <li><%= link_to("ホーム", home_path, class: "nav-link") %></li>
        <li><%= link_to("検索ページ", cocktails_path, class: "nav-link") %></li>
        <li><%= link_to("ランキング", rankings_path, class: "nav-link") %></li>
        <% if current_user %>
        <li><%= link_to("カクテル登録", new_cocktail_path, class: "nav-link") %></li>
          <li><%= link_to("ユーザーページ", user_path(current_user.id), class: "nav-link") %></li>
          <li><%= link_to("ログアウト", logout_path, :method => :delete, class: "nav-link") %></li>
        <% else %>
          <li><%= link_to("ユーザー登録", new_user_path, class: "nav-link") %></li>
          <li><%= link_to("ログイン", login_path, class: "nav-link") %></li>
        <% end %>
      </ul>
    </div>
    <div class="container">
      <% if flash[:notice]  %>
        <div class="alert alert-success">
          <%= flash[:notice]  %>
        </div>
      <% end %>
      <%= yield %>
  </body>
</html>
