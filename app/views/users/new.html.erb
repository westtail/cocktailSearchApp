<h1>ユーザー登録</h1>

<% if @user.errors.present? %>
  <div class="alert alert-warning">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="user-form">
    <%= form_for(@user) do |f| %>
    <div class="form-user-name">
      <%= f.label :name ,class: "col-form-label"%>
      <%= f.text_field :name, :required => true , class: "form-control"%>
    </div>
    <div class="form-user-email">
      <%= f.label :email ,class: "col-form-label"%>
      <%= f.email_field :email, :required => true , class: "form-control"%>
    </div>
    <div class="form-user-password">
      <%= f.label :password ,class: "col-form-label"%>
      <%= f.password_field :password, :required => true , class: "form-control"%>
    </div>
    <div class="form-user-password-con">
      <%= f.label :password_confirmation,class: "col-form-label"%>
      <%= f.password_field :password_confirmation , :required => true, class: "form-control"%>
    <div>
    <div class="form-user-submit">
      <%= f.submit "Create my account", class: "btn btn-info" %>
    </div>
    <% end %>
</div>
